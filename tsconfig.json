{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@redux/*": ["redux/*"],
      "@graphql/*": ["graphql/*"],
      "@context/*":["context/*"],
      "@components/*":["components/*"]
    },
  },
 
"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/**/*","redux/*","api/*", "styles/**/*", "graphql/*,components/*"],
  "exclude": ["node_modules"]
}
